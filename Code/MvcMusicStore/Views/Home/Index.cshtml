<div ng-controller="MainController">

    <div class="row">
        <div class="col-md-6">
            <input type="text" ng-model="filter.search" ng-change="filter()" class="form-control" placeholder="Search" />
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary pull-right" ng-controller="AlbumController" ng-click="addAlbumDialog()">Add album</a>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12" ng-hide="showAddAlbum">
            <table class="table table-hover ng-cloak" ng-table="tableParams">
                <thead>
                    <tr>
                        <td class="col-md-4">Title</td>
                        <td class="col-md-2">Genre</td>
                        <td class="col-md-3">Artist</td>
                        <td class="col-md-2">Price</td>
                        <td class="col-md-1">Favourite</td>
                    </tr>

                </thead>
                <tbody>
                    <tr ng-repeat="item in $data">
                        <td data-title="'Title'" filter="{Title: 'text'}" sortable="'Title'">
                            {{item.Title}}
                        </td>
                        <td>{{item.Genre}}</td>
                        <td>{{item.Artist}}</td>
                        <td>{{item.Price}}</td>
                        <td><i class="fa fa-heart favorite" ng-animate="{enter: 'animate-enter', leave: 'animate-leave'}" ng-class="{ 'red' : isFavorite(item.AlbumId) }" ng-click="setFavorite(item.AlbumId)"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>

</div>
